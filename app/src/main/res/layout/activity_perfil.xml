<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PerfilActivity">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#F2F2F2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#990000"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#990000"
                android:scaleType="fitStart"
                android:contentDescription="Logo Fatec"
                android:src="@drawable/logo_fatec_" />

            <TextView
                android:id="@+id/perfil"
                android:padding="20dp"
                android:text="Perfil"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                app:layout_constraintTop_toBottomOf="@+id/perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#990000"
                android:elevation="8dp"
                android:clipToPadding="false"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:padding="20dp"
                android:src="@drawable/foto_perfil"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#FFF"
                android:contentDescription="Logo Fatec"
                android:src="@drawable/foto_perfil"/>

            <Button
                android:id="@+id/entrarButton"
                android:text="SAIR"
                android:layout_marginTop="16dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#990000"
                android:textColor="#FFF" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>